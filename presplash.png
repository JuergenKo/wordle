from PIL import Image, ImageDraw, ImageFont

# Size of presplash (512x512 is safe, Android will scale it)
img_size = (512, 512)

# Background color (white)
img = Image.new("RGB", img_size, color="white")
draw = ImageDraw.Draw(img)

# Optional: use a built-in font (since Colab usually doesn't have TTFs installed)
text = "Wordle Solver"
text_color = "black"

# Find text size and center it
bbox = draw.textbbox((0,0), text)
text_w, text_h = bbox[2]-bbox[0], bbox[3]-bbox[1]
pos = ((img_size[0]-text_w)//2, (img_size[1]-text_h)//2)

draw.text(pos, text, fill=text_color)

# Save into your repo so buildozer can find it
img.save("/content/wordle/presplash.png")
print("Created /content/wordle/presplash.png")
